<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:orientation="vertical"
    tools:context=".MainActivity_sell">

    <TextView
        android:id="@+id/t_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="16sp"
        android:padding="5dp"
        android:layout_gravity="end"
        tools:text = "2024년 06월 20일 05시 11분 55초"/>

    <TextView
        android:id="@+id/t_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:paddingEnd="10dp"
        android:hint="0"
        android:textSize="60sp"
        android:textColor="@color/black" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:columnCount="3">

        <Button
            android:id="@+id/btn_menu1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@drawable/btn_menu"
            android:onClick="menuClick"
            android:text="단팥빵\n\n3000" />

        <Button
            android:id="@+id/btn_menu2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@drawable/btn_menu"
            android:onClick="menuClick"
            android:text="크림빵\n\n3500" />

        <Button
            android:id="@+id/btn_menu3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@drawable/btn_menu"
            android:onClick="menuClick"
            android:text="식빵\n\n4300" />

        <Button
            android:id="@+id/btn_menu4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@drawable/btn_menu"
            android:onClick="menuClick"
            android:text="크루아상\n\n3800" />

        <Button
            android:id="@+id/btn_menu5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@drawable/btn_menu"
            android:onClick="menuClick"
            android:text="에그타르트\n\n3500" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_rowWeight="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_margin="10dp"
            android:background="@drawable/btn_menu"
            android:onClick="menuClick"
            android:text="+" />

    </GridLayout>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="30dp"
        android:padding="15dp"
        android:background="@drawable/btn_off"
        android:onClick="allDelete"
        android:text="메뉴 전체 삭제"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:padding="30dp"
        android:background="@drawable/btn_sell"
        android:text="주문 완료"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>